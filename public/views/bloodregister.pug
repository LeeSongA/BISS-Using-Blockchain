  body
            div(class="main")

                h2(class="sub-header") 혈액 등록
                <div class="container">
                    <div class="row">
                        <div class="col-md-12 offset-md-3 text-xs-center">
                            <br>
                            <h3>Blood Register</h3>
                            <br>
                            <div>
                                <div class="form-group">
                                <label for="bloodtype">Select Blood type</label>
                                    <form>
                                        <select id="mySelect1" onchange="myFunction()">
                                            <option>-선택-</option>
                                            <option>Rh+</option>
                                            <option>Rh-</option>
                                        </select>
                                        <select id="mySelect2" onchange="myFunction()">
                                            <option>-선택-</option>
                                            <option>A</option>
                                            <option>B</option>
                                            <option>O</option>
                                            <option>AB</option>
                                        </select>
                                    </form>
                                </div>
                                <div class="form-group">
                                    <label for="bloodtype">BloodType</label>
                                    <input type="text" class="form-control" id="bloodtype" readonly>
                                </div>
                                <button onclick="registBlood()" class="btn btn-primary">등록</button>
                                <br>
                                <br><br>
                                <div class="alert alert-info" role="alert" id="message">
                                    Transaction Hash or Error
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            <script type="text/javascript" src="/js/sha1.min.js"></script>
            <script type="text/javascript" src="/js/socket.io.min.js"></script>
            <script type="text/javascript" src="/js/main.js"></script>
                             
                        
                       
                script(src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.2/jquery.min.js")
                script(src="http://bootstrapk.com/dist/js/bootstrap.min.js")
                script(src="http://bootstrapk.com/assets/js/vendor/holder.js")
                script(src="http://bootstrapk.com/assets/js/ie10-viewport-bug-workaround.js")
                script.
                    function myFunction() {
                        var B = document.getElementById("bloodtype");
                        var x = document.getElementById("mySelect1");
                        var y = document.getElementById("mySelect2");
                        var i = x.selectedIndex;
                        var j = y.selectedIndex;
                        if(i!=0&&j!=0)B.value = String(i) + String(j);
                        else B.value = "";
                        }